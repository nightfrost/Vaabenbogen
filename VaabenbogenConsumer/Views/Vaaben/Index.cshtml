@model IEnumerable<VaabenbogenConsumer.Models.Vaaben>

@{
    ViewData["Title"] = "Våbenlisten";
}

<h1>Våbenlisten</h1>
<h3>Her kan du se listen over våben indregistreret i Våbenbogen, eller de resultater som er søgt efter.</h3>
<br />
<partial name="_SearchWeaponPartial" model="@(ViewBag.SoegVaabenObject)"/>
<hr />
<h4>Det er kun muligt at udskrive våben, som ikke allerede er udskrevet.</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Navn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabrikant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ladefunktion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loebenummer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUdskrevet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Navn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabrikant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ladefunktion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loebenummer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @(item.IsUdskrevet.HasValue ? item.IsUdskrevet.Value : "False")
            </td>
            <td>
                    @if(item.IsUdskrevet.HasValue && item.IsUdskrevet.Value == true)
                    {
                        <a asp-action="Release" asp-route-id="@item.Id" class="visually-hidden">Udskriv |</a>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editér |</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Detaljer |</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Slet</a>
                    } else
                    {
                        <a asp-action="Release" asp-route-id="@item.Id">Udskriv |</a>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editér |</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Detaljer |</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Slet</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <div class="mt-4">
        <a class="btn btn-lg btn-primary" asp-action="Create">Opret ny</a>
    </div>
    
</p>