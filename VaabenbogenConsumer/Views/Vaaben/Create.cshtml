@using VaabenbogenConsumer.Extensions
@model VaabenbogenConsumer.Models.Vaaben

@{
    ViewData["Title"] = "Opret";
}

<h1>Opret Våben</h1>
<hr />
<partial name="_ErrorSummaryPartial" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Navn" class="control-label"></label>
                <input asp-for="Navn" class="form-control" />
                <span asp-validation-for="Navn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabrikant" class="control-label"></label>
                <input asp-for="Fabrikant" class="form-control" />
                <span asp-validation-for="Fabrikant" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-8">
                    <label asp-for="Ladefunktion" class="control-label"></label>
                    <select asp-for="Ladefunktion" class="form-control" asp-items="@(ViewBag.LadefunktionOptions)"></select>
                    <span asp-validation-for="Ladefunktion" class="text-danger"></span>
                </div>
                <div class="col-md-2 d-flex align-items-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="true" id="toggleInputType">
                        <label class="form-check-label" for="toggleInputType">
                            Fritekst?
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group" id="ladefunktionFritekst" style="display: none;">
                <label asp-for="LadefunktionFritekst" class="control-label"></label>
                <input asp-for="LadefunktionFritekst" class="form-control" />
                <span asp-validation-for="LadefunktionFritekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loebenummer" class="control-label"></label>
                <input asp-for="Loebenummer" class="form-control" />
                <span asp-validation-for="Loebenummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="@(ViewBag.TypeOptions)"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@(ViewBag.StatusOptions)"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indskriver" class="control-label"></label>
                <select data-disable-target="true" name="indskrevetAf" class="form-control" asp-items="@(ViewBag.IndskriverOptions)"></select>
            </div>
            <br />
            <input class="form-check-input" type="checkbox" value="true" id="flexCheckDefault" name="createNew">
            <label class="form-check-label" for="flexCheckDefault">
                Eller opret ny?
            </label>
            <partial name="_CreateNewPartial" />

            <br />
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger" role="button">Tilbage</a>
            </div>
        </form>
        <br />
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const checkbox = document.getElementById("toggleInputType");
        const conditionalDiv = document.getElementById("ladefunktionFritekst");

        checkbox.addEventListener("change", function () {
            if (this.checked) {
                conditionalDiv.style.display = "block";
            } else {
                conditionalDiv.style.display = "none";
                LadefunktionFritekst.value = null;
            }
        });
    });
</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
