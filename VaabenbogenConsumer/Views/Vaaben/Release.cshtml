@model VaabenbogenConsumer.Models.Vaaben

@{
    ViewData["Title"] = "Udskriv";
}

<h1>Udskriv Våben</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Navn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Navn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fabrikant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fabrikant)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ladefunktion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ladefunktion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Loebenummer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Loebenummer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <hr />
    <div class="row">
        <div class="col-sm-5">
            <label class="">Udskrives til:</label>
            <select class="form-select" asp-items="@(ViewBag.ReleasedToOptions)"></select>
            <br />
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Eller opret ny?
            </label>
            
            <br />
            <a asp-action="Release" class="btn btn-primary" role="button">Udskriv</a>
        </div>
    </div>
</div>
